<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://www.bank.com/loan-details" targetNamespace="http://www.bank.com/loan-details" elementFormDefault="qualified">
    <xs:element name="getLoanDetailsRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="userId" type="xs:int"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="getLoanDetailsResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="loanId" type="xs:int"/>
                <xs:element name="amount" type="xs:double"/>
                <xs:element name="status" type="xs:string"/>
                <xs:element name="startDate" type="xs:date"/>
                <xs:element name="endDate" type="xs:date"/>
                <xs:element name="interestRate" type="xs:double"/>
                <xs:element name="borrowerName" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
